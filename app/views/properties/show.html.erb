<div class="property-main-photo" style="background-image:url(<%= property_photo_url @property %>)" >
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-6">
          <p class="mb-0"> <%= @property.address %> </p>
          <p class="h2"><%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Sale" %> </p>
        </div>
        <div class="col-md-6 text-center">
          <div class="row mr-md-3 mt-sm-3 bg-light p-3">
            <div class="col-4">
              <p class="m-0"><strong>Rooms</strong></p>
              <span class="lead"><i class="fa fa-bed"></i> <%= @property.rooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Bathrooms</strong></p>
              <span class="lead"><i class="fas fa-bath"></i> <%= @property.bathrooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Parking</strong></p>
              <span class="lead"><i class="fa fa-car"></i> <%= @property.parking_spaces %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row border-top border-bottom mt-4 mb-5 pt-4 pb-4">
        <div class="col-6">
          <strong class="text-success">Est. Monthly Repayments of <%= number_to_currency((@property.price) / 360)%> </strong>
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I afford this property?","#", class:"text-success" %></strong>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p class="h3"><%= @property.name %></p>
          <p class="h5">Property Description</p>
          <div id="prop-details" class="">
            <%= simple_format @property.details %>
          </div>
          <button id="toggleDetails" class="btn btn-outline-info mt-3">Show More</button>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <%= render "properties/agent_details" %>
    </div>
  </div>
</div>


  <section id="latest-properties" class="mt-5">
    <div class="container">
      <div class="row">
        <%= render "properties/list", properties: @agent_properties %>
      </div>
    </div>
  </section>
