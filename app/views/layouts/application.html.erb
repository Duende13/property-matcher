<!DOCTYPE html>
<html>
  <head>
    <title>PropertyMatcher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_url"favicon/apple-touch-icon.png" %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_url"favicon/favicon-32x32.png" %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_url"favicon/favicon-16x16.png" %>">
    <link rel="manifest" href="<%= asset_url"favicon/site.webmanifest" %>">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body id="<%= controller.controller_name %>" class="<%= controller.action_name%>">
    <% if ["public", "devise", "sessions"].include?(controller.controller_name) %>
      <header>
        <%= render "layouts/nav/public"%>
        <%= yield %>
      </header>
    <% else %>
      <%= render "layouts/nav/dashboard"%>
      <div class="container-fluid">
        <div class="row">
          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mt-4 ">
            <%= render "layouts/nav/sidebar"%>
            <%= yield %>
          </main>
        </div>
      </div>
    <% end %>

    <%#= render "layouts/footer"%>
    <div id="notifications"><%= flash_notifications %></div>

    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script> feather.replace();</script>
  </body>
</html>
