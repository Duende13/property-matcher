<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>
    <%= f.text_field :first_name, autofocus: true, placeholder: "First Name",class:"form-control", id:"inputFirstName" %>
    <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name",class:"form-control", id:"inputLastName" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email Address",class:"form-control", id:"inputEmail" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "New password", class:"form-control", id: "inputPassword" %>

    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class:"form-control", id: "inputPasswordConfirmation" %>
    <%= f.submit "Sign Up", class:"btn btn-lg btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
