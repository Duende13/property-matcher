<!DOCTYPE html>
<html>
  <head>
    <title>PropertyMatcher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_url"favicon/apple-touch-icon.png" %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_url"favicon/favicon-32x32.png" %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_url"favicon/favicon-16x16.png" %>">
    <link rel="manifest" href="/site.webmanifest">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>

  </head>

  <body id="<%= controller.controller_name %>" class="<%= controller.action_name%>">
    <% if ["public", "devise", "sessions"].include?(controller.controller_name) %>
      <header>
        <%= render "layouts/nav/public"%>
        <%= yield %>
      </header>
    <% else %>
      <%= render "layouts/nav/dashboard"%>
      <div class="container-fluid">
        <div class="row">
          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mt-4 ">
            <%= render "layouts/nav/sidebar"%>
            <%= yield %>
          </main>
        </div>
      </div>
    <% end %>

    <%#= render "layouts/footer"%>
    <div id="notifications"><%= notice %></div>

    <!-- <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script> -->
    <script> feather.replace();</script>
  </body>
</html>
